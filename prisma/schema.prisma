// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

// Prisma schema

model Expense {
  id        String    @id @default(uuid())
  orgId     String
  title     String
  amount    String
  userId    String
  addedBy   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Balance {
  id String @id @default(uuid())
  userId String 
  orgId  String
  balance String @default("0")

  users User[]
}

model Group {
  id    String @id @default(uuid())
  group String
  title String

  users User[]
}

model User {
  id        String   @id @default(uuid())
  userId String
  userName String
  imageUrl String?
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  groupId   String
  balance   Balance  @relation(fields: [balanceId], references: [id], onDelete: Cascade)
  balanceId String

  @@index([groupId])
  @@index([balanceId])
}

model ExpenseUser {
  id String @id @default(uuid())
  expenseId String
  userId String
  amount String
}

enum ACTION{
  CREATE
  DELETE
}

enum ENTITY_TYPE{
  EXPENSE
  REMINDER
}

model AuditLog{
  id String @id @default(uuid())
  orgId String
  action ACTION
  entityId String
  entityType ENTITY_TYPE
  entityTitle String
  userId String
  userImg String @db.Text
  userName String @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Reminder{
  id String @id @default(uuid())
  orgId String
  userId String
  userName String
  imageUrl String @db.Text
  title String
  desc String @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}